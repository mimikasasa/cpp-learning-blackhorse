#include<iostream>
using namespace std;

class Student {

public://公共权限

	//类中的属性和行为 统一称为成员
	//属性  成员属性 成员变量
	//行为  成员函数 成员方法

	//属性
	string m_name;
	int m_id;

	//行为
	void setName(string name)
	{
		m_name = name;
	}
	void setId(int id)
	{
		m_id = id;
	}

	void showStudent()
	{
		cout << "学生姓名为：" << m_name << "    学生学号为：" << m_id << endl;
	}

};

int main()
{
	Student stu1;
	stu1.setName("郑唯敏");
	stu1.setId(652);
	stu1.showStudent();

	system("pause");
	return 0;
}
