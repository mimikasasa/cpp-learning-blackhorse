#include<iostream>
#include<iomanip>
using namespace std;

class Person
{
public:
	Person(string nm, string tt)
	{
		m_Name= nm;
		m_Title = tt;
	}

	string getName()
	{
		return m_Name;
	}
	string getTitle()
	{
		return m_Title;
	}

	void setNumofClass(int n)
	{
		m_NumofClass = n;
	}
	int getNumofClass()
	{
		return m_NumofClass;
	}

	void setFixedWage(string t)//传入一个t代表职称用来判断固定工资水平，下同
	{
		if (t== "professor")
		{
			m_FixedWage = 5000;
		}
		if (t == "Fuprofessor")//Fuprofessor-副教授
		{
			m_FixedWage = 4000;
		}
	}
	void setAllowance(string t)
	{
		if (t == "professor")
		{
			m_Allowance = 90;
		}
		if (t == "Fuprofessor")
		{
			m_Allowance = 80;
		}
	}
	int getFixedWage()
	{
		return m_FixedWage;
	}
	int getAllowance()
	{
		return m_Allowance;
	}

	int calculateWage()
	{
		return m_FixedWage + m_Allowance * m_NumofClass;
	}

private:
	string m_Name;
	string m_Title;//职称
	int m_NumofClass;//上课数量
	int m_FixedWage;//固定工资
	int m_Allowance;//课时补贴
};

const void print(Person&p)
{
	cout << left << setw(10) << p.getName() << "\t"
		<< setw(10) << p.getTitle() << "\t"
		<< setw(10) << p.getNumofClass() << "\t"
		<< setw(10) << p.calculateWage() << endl;
}

void test()
{
	Person p1("Zhangsan", "professor");
	p1.setNumofClass(5);
	p1.setFixedWage(p1.getTitle());
	p1.setAllowance(p1.getTitle());
	print(p1);

	Person p2("Lisi", "Fuprofessor");
	p2.setNumofClass(10);
	p2.setFixedWage(p2.getTitle());
	p2.setAllowance(p2.getTitle());
	print(p2);

	Person p3("Wangwu", "professor");
	p3.setNumofClass(8);
	p3.setFixedWage(p3.getTitle());
	p3.setAllowance(p3.getTitle());
	print(p3);

	Person p4("Zhaoliu", "Fuprofessor");
	p4.setNumofClass(16);
	p4.setFixedWage(p4.getTitle());
	p4.setAllowance(p4.getTitle());
	print(p4);
}

int main()
{
	cout << left << setw(10) << "姓名" << "\t"
		<< setw(10) << "职称" << "\t"
		<< setw(10) << "上课数量" << "\t"
		<< setw(10) << "月收入" << endl;
	test();


	system("pause");
	return 0;
}
